# ==================== ОСНОВНЫЕ НАСТРОЙКИ ====================
BOT_TOKEN=your_bot_token_here
ADMIN_ID=your_telegram_id

# ==================== КАНАЛЫ ====================
DOTA_CHANNEL_ID=@your_dota_channel
CS_CHANNEL_ID=@your_cs_channel
CHECK_SUBSCRIPTION=True

# ==================== POSTGRESQL ====================
# Для Docker окружения используйте хост "postgres"
# Для локальной разработки используйте "localhost"
DB_HOST=localhost
DB_PORT=5432
DB_NAME=teammates
DB_USER=teammates_user
DB_PASSWORD=your_secure_password

# ==================== REDIS ====================
# Для Docker окружения используйте хост "redis"
# Для локальной разработки используйте "localhost"
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ==================== НАСТРОЙКИ ПРОИЗВОДИТЕЛЬНОСТИ ====================
# Размер пула соединений PostgreSQL (по умолчанию 20)
DB_POOL_SIZE=20

# Время жизни кэша в секундах (по умолчанию 300 = 5 минут)
CACHE_TTL=300

# ==================== ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ ====================
# Окружение (development/production)
ENVIRONMENT=production

# Уровень логирования (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO
CONSOLE_LOGS=false
